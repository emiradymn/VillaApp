@model List<ResultBannerDto>

    @{
    ViewData["Title"] = "Banner Listesi";
    Layout = "_AdminLayout";
    }

    <table class="table table-hover table-bordered">
        @{
        int count = 0;
        }
        <tr>
            <th>#</th>
            <th>Şehir</th>
            <th>Başlık</th>
            <th>İşlemler</th>
        </tr>
        @foreach (var item in Model)
        {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.City</td>
            <td>@item.Title</td>
            <td>
                <a asp-controller="Banner" asp-action="DeleteBanner" asp-route-id="@item.Id"
                    class="btn btn-outline-danger">Sil</a>
                <a asp-controller="Banner" asp-action="UpdateBanner" asp-route-id="@item.Id"
                    class="btn btn-outline-primary">Güncelle</a>
            </td>
        </tr>
        }
    </table>
    <a asp-controller="Banner" asp-action="CreateBanner" class="btn btn-outline-success">Yeni Banner Ekle</a>