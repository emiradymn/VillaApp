@model List<ResultVideoDto>
    <div class="video section">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 offset-lg-4">
                    <div class="section-heading text-center">
                        <h6>| Videolarımız</h6>
                        <h2>Tanıtım Videomuzu İzleyin</h2>
                    </div>
                </div>
            </div>

            <div class="row justify-content-center">
                @foreach(var item in Model)
                {
                <div class="col-lg-8 text-center mb-4"> <!-- Bu div iframe'i ortalamaya yardımcı olur -->
                    <iframe style="width: 100%; height: 500px; max-width: 1000px;" src="@item.VideoUrl"
                        title="YouTube video player" frameborder="0"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
                        allowfullscreen>
                    </iframe>
                </div>
                }
            </div>
        </div>
    </div>